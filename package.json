{
  "name": "pipot",
  "main": "./backend/dist/index.js",
  "workspaces": [
    "./backend",
    "./frontend"
  ],
  "scripts": {
    "start": "node ./backend/dist/index.js",
    "dev": "concurrently \"npm run dev -w frontend\" \"npm run dev -w backend\"",
    "backend:dev": "npm run dev -w backend",
    "frontend:dev": "npm run dev -w frontend",
    "build": "concurrently \"npm run build -w frontend\" \"npm run build -w backend\""
  },
  "author": "Owl1029",
  "dependencies": {
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
